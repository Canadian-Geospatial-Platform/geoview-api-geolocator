{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "API Geolocator Input Google Schema",
  "type": "object",
  "version": 1,
  "comments": "Schema for GeoView-API-geolocator Google input.",
  "additionalProperties": false,
  "properties": {
    "parameters": {
      "type": "object",
      "description": "Set of parsed elements and parameters to pass to this API.",
      "properties": {
        "resourcePath": {
          "oneof": [
            {
              "properties": {
                "nearbysearch": {
                  "type": "string"
                }
              },
              "required": [
                "nearbysearch"
              ]
            },
            {
              "properties": {
                "findplacefromtext": {
                  "type": "string"
                }
              },
              "required": [
                "findplacefromtext"
              ]
            },
            {
              "properties": {
                "geocode": {
                  "type": "string"
                }
              },
              "required": [
                "geocode"
              ]
            }
          ],
          "description": "The path to the resource called from the API. This options are mandatory and mutually exclusive and depends on the path."
        },
        "additionalParams": {
          "type": "string",
          "description": "The parameters asociated to its resource path."
        }
      },
      "additionalProperties": false
    },
    "lang": {
      "type": "string",
      "enum": [
        "en",
        "fr"
      ],
      "description": "The language on wich to filter the query. Optional parameter, if missing no filtering will be applied."
    }
  },
  "required": [
    "resourcePath",
    "additionalParams"
  ]
}